.top{
  display: flex;
  width: 750rpx;
  padding: 20rpx;
  align-items: center;
  border-bottom: 1px solid #000;
  /* position: fixed; */
  /* clear: both; */
  height: 100rpx;
}
.img {
  height: 120rpx;
  width: 120rpx;
}
.title {
  font-size: 50rpx;
  font-weight: 700;
  color: rgb(136, 127, 127);
  margin-left: 30rpx;
}
.container {
  height: 100%;
  background-color: #CCE8CF;
}
.foot {
  /* background-color: #CCE8CF; */
  width: 750rpx;
  margin-top: 100rpx;
}
.footdiv {
  width: 90%;
  margin: 0 auto;
  box-sizing: border-box;
  border: 1px solid #829D93;
  box-shadow: -20rpx 20rpx #586F66;
  height: 120rpx;
  text-align: center;
  line-height: 120rpx;
  background-color: #8DC3AF;
  margin-top: 50rpx;
  position: relative;
}
.key {
  position: absolute !important;
  right: 60rpx;
  top: 50%;
  width: 40rpx;
  height: 40rpx;
  margin-top: -20rpx;
}
